extends ../layout.pug

block content
  div(class="d-flex flex-row content mx-auto justify-content-center")
    form(class="card" method="post" action="/users/signup")
      div(class="card-header") Inscription
      div(class="card-body")
        div(class="form-group")
          label Username
          input(class="form-control" type="text" name="username")
          label Email
          input(class="form-control" type="email" name="email")
          label Password
          input(class="form-control" type="password" name="password")
        if errors
          ul(class="my-2")
            each error in errors
              li(class="text-danger")= error
        div(class="w-100")
          input(type="submit" value="Sign up" class="btn btn-primary ml-auto d-block")